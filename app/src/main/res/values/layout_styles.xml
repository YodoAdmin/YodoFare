<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Registration -->
    <style name="RegistrationLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Fare -->
    <style name="FareLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FareRowLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="SeparatorFareTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="SeparatorNavigationTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/colorSeparatorNav</item>
    </style>

    <!-- General Layout -->
    <style name="GeneralLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

</resources>