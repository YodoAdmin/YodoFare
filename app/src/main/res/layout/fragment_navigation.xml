<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorNavigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/NavigationTitleText"
            android:text="@string/text.title.options" />

        <View style="@style/SeparatorNavigationTheme"/>

        <Button
            style="@style/NavigationButtonTheme"
            android:drawableLeft="@mipmap/ic_settings_white"
            android:drawableStart="@mipmap/ic_settings_white"
            android:onClick="settings"
            android:text="@string/text.settings"/>

        <Spinner
            android:id="@+id/spinner_scanner_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            style="@style/NavigationTitleText"
            android:text="@string/text.title.tools" />

        <View style="@style/SeparatorNavigationTheme"/>

        <Button
            style="@style/NavigationButtonTheme"
            android:drawableLeft="@mipmap/ic_account_balance_white"
            android:drawableStart="@mipmap/ic_account_balance_white"
            android:onClick="balance"
            android:text="@string/text.balance"/>

        <Button
            style="@style/NavigationButtonTheme"
            android:drawableLeft="@mipmap/ic_info_white"
            android:drawableStart="@mipmap/ic_info_white"
            android:onClick="about"
            android:text="@string/text.about"/>

    </LinearLayout>
</ScrollView>